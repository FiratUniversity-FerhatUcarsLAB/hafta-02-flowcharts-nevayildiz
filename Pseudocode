BAŞLA

    // Kullanıcı kimlik doğrulama
    GİRİŞ: TC_Kimlik, Şifre
    EĞER KimlikDoğrula(TC_Kimlik, Şifre) = DOĞRU İSE
        YAZ "Giriş başarılı."
        
        // Ana menü seçimi
        YAZ "Lütfen yapmak istediğiniz işlemi seçin:"
        YAZ "1 - Randevu Al"
        YAZ "2 - Tahlil Sonucu Görüntüle"
        GİRİŞ: secim

        EĞER secim = 1 İSE
            // --- RANDEVU SİSTEMİ ---
            TEKRARLA
                YAZ "Poliklinik listesini görüntülüyorsunuz."
                poliklinikListesi = PoliklinikleriGetir()
                YAZ poliklinikListesi
                GİRİŞ: poliklinikSec
            DOĞRU DEĞİLSE
                YAZ "Geçersiz seçim."
            KADAR poliklinikSec GEÇERLİ OLANA KADAR

            // Doktor seçimi
            TEKRARLA
                doktorListesi = DoktorlariGetir(poliklinikSec)
                YAZ doktorListesi
                GİRİŞ: doktorSec
            DOĞRU DEĞİLSE
                YAZ "Geçersiz doktor seçimi."
            KADAR doktorSec GEÇERLİ OLANA KADAR

            // Uygun saat seçimi
            TEKRARLA
                uygunSaatler = UygunSaatleriGetir(doktorSec)
                YAZ uygunSaatler
                GİRİŞ: saatSec
            DOĞRU DEĞİLSE
                YAZ "Seçtiğiniz saat uygun değil."
            KADAR saatSec GEÇERLİ OLANA KADAR

            // Randevu onaylama
            YAZ "Randevuyu onaylıyor musunuz? (E/H)"
            GİRİŞ: onay
            EĞER onay = "E" İSE
                RandevuKaydet(TC_Kimlik, doktorSec, saatSec)
                SMSGönder(TC_Kimlik, "Randevunuz başarıyla oluşturuldu.")
                YAZ "Randevunuz onaylandı ve SMS gönderildi."
            DEĞİLSE
                YAZ "Randevu iptal edildi."
            BİTİR EĞER

        DEĞİLSE EĞER secim = 2 İSE
            // --- TAHLİL SONUCU SİSTEMİ ---
            EĞER TahlilVarMı(TC_Kimlik) = DOĞRU İSE
                EĞER SonucHazirMı(TC_Kimlik) = DOĞRU İSE
                    YAZ "Tahlil sonucunuz hazır."
                    GörüntüleSonuc(TC_Kimlik)
                    YAZ "PDF indirmek ister misiniz? (E/H)"
                    GİRİŞ: pdfOnay
                    EĞER pdfOnay = "E" İSE
                        PDFIndir(TC_Kimlik)
                        YAZ "PDF indirildi."
                    DEĞİLSE
                        YAZ "PDF indirilmedi."
                    BİTİR EĞER
                DEĞİLSE
                    YAZ "Tahlil sonucu henüz hazır değil, lütfen daha sonra tekrar deneyin."
                BİTİR EĞER
            DEĞİLSE
                YAZ "Kayıtlı tahlil bulunamadı."
            BİTİR EĞER
        
        DEĞİLSE
            YAZ "Geçersiz seçim."
        BİTİR EĞER

    DEĞİLSE
        YAZ "Kimlik doğrulama başarısız. Lütfen tekrar deneyin."
    BİTİR EĞER

BİTİR
